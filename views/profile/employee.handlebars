<div class="row bg-light employee-details">
    <div class="col-sm-12 col-md-6 mt-4">
        <div class="d-flex justify-content-center">
            <img src="{{employee.profilePic}}" class="rounded-circle w-50">
        </div>
        <div class="d-flex justify-content-center mt-5">
            <h4 class="text-muted">{{employee.post}}</h4>
        </div>
        <div class="d-flex justify-content-center">
            <div class="p-2">
                <a href="{{employee.social.facebook}}" target="_blank">
                    <i class="fab fa-facebook" aria-hidden="true"></i></a>
            </div>
            <div class="p-2">
                <a href="{{employee.social.twitter}}" target="_blank"><i class="fab fa-twitter"
                        aria-hidden="true"></i></a>
            </div>
            <div class="p-2">
                <a href="{{employee.social.linkedin}}" target="_blank"><i class="fab fa-linkedin"
                        aria-hidden="true"></i></a>
            </div>
            <div class="p-2">
                <a href="{{employee.social.github}}" target="_blank"><i class="fab fa-github-square fa-2x"
                        aria-hidden="true"></i></a>
            </div>
            <div class="p-2">
                <a href="{{employee.social.instagram}}" target="_blank"><i class="fab fa-instagram"
                        aria-hidden="true"></i></a>
            </div>
        </div>
    </div>

    <div class="col-sm-12 col-md-6 mt-5">
        <div class="pl-2">
            <h4 class="text-muted text-uppercase"><i class="fa fa-arrow-right"
                    aria-hidden="true"></i>&emsp;{{employee.name}}</h4>
            <h4 class="text-muted"><i class="fa fa-arrow-right" aria-hidden="true"></i>&emsp;{{employee.email}}</h4>
            <h4 class="text-muted"><i class="fa fa-arrow-right" aria-hidden="true"></i>&emsp;{{employee.contactNo}}</h4>
            <hr />
            <table class="table table-responsive-lg table-borderless">
                <tbody>
                    <tr>
                        <td>
                            <h4>Age</h4>
                        </td>
                        <td>
                            <h4>{{employee.age}}</h4>
                        </td>
                    </tr>
                    <tr>
                        <td>
                            <h4>E-mail</h4>
                        </td>
                        <td>
                            <h4>{{employee.email}}</h4>
                        </td>
                    </tr>
                    <tr>
                        <td>
                            <h4>Contact</h4>
                        </td>
                        <td>
                            <h4>{{employee.contactNo}}</h4>
                        </td>
                    </tr>
                    <tr>
                        <td>
                            <h4>Salary</h4>
                        </td>
                        <td>
                            <h4>{{employee.salary}}</h4>
                        </td>
                    </tr>
                    <tr>
                        <td>
                            <h4>Gender</h4>
                        </td>
                        <td>
                            <h4>{{employee.gender}}</h4>
                        </td>
                    </tr>
                </tbody>
            </table>
        </div>
    </div>
    <div class="line-horizontal text-muted">
        <h4>Personal Details</h4>
    </div>
    <div class="col-sm-12 col-md-12 mt-4">
        <div class="pl-2">
            <h4 class="text-muted text-center">
                {{employee.description}}
            </h4>
            <table class="table table-responsive-sm table-borderless full-table">
                <tbody>
                    <tr>
                        <td>
                            <h4>Joining Date</h4>
                        </td>
                        <td>
                            <h4>{{formatDate employee.date 'MMMM Do YYYY'}}</h4>
                        </td>
                    </tr>
                    <tr>
                        <td>
                            <h4>Skills</h4>
                        </td>
                        <td>
                            <h4>{{employee.skills}}</h4>
                        </td>
                    </tr>
                    <tr>
                        <td>
                            <h4>Address</h4>
                        </td>
                        <td>
                            <h4>{{employee.location}}</h4>
                        </td>
                    </tr>
                    <tr>
                        <td>
                            <h4>Gender</h4>
                        </td>
                        <td>
                            <h4>{{employee.gender}}</h4>
                        </td>
                    </tr>
                    <tr>
                        <td>
                            <h4>Blood Group</h4>
                        </td>
                        <td>
                            <h4>{{employee.bloodGroup}}</h4>
                        </td>
                    </tr>
                    <tr>
                        <td>
                            <h4>status</h4>
                        </td>
                        <td>
                            <h4>{{employee.maritalstatus}}</h4>
                        </td>
                    </tr>
                </tbody>
            </table>
        </div>
    </div>
    <div class="line-horizontal text-muted">
        <h4>Bank Details</h4>
    </div>
    <div class="col-sm-12 col-md-12 mt-4">
        <div class="pl-2">
            <table class="table table-responsive-sm full-table table-borderless">
                <tr>
                    <td>
                        <h4>Bank Name</h4>
                    </td>
                    <td>
                        <h4>{{employee.bankDetails.bankName}}</h4>
                    </td>
                </tr>
                <tr>
                    <td>
                        <h4>Account Number</h4>
                    </td>
                    <td>
                        <h4>{{employee.bankDetails.accountNumber}}</h4>
                    </td>
                </tr>
            </table>
        </div>
    </div>
    <div class="line-horizontal text-muted">
        <h4>Education</h4>
    </div>
    <div class="col-sm-12 col-md-12 mt-4 mb-4">
        <div class="pl-2">
            <table class="table table-responsive-sm full-table table-borderless">
                <tbody>
                    <tr>
                        <td>
                            <h4>School</h4>
                        </td>
                        <td>
                            <h4>{{employee.education.school}}</h4>
                        </td>
                    </tr>
                    <tr>
                        <td>
                            <h4>Board</h4>
                        </td>
                        <td>
                            <h4>{{employee.education.board}}</h4>
                        </td>
                    </tr>
                    <tr>
                        <td>
                            <h4>College</h4>
                        </td>
                        <td>
                            <h4>{{employee.education.college}}</h4>
                        </td>
                    </tr>
                    <tr>
                        <td>
                            <h4>Branch</h4>
                        </td>
                        <td>
                            <h4>{{employee.education.branch}}</h4>
                        </td>
                    </tr>
                    <tr>
                        <td>
                            <h4>Description</h4>
                        </td>
                        <td>
                            <h4>{{employee.education.description}}</h4>
                        </td>
                    </tr>
                </tbody>
            </table>
        </div>
    </div>
    <div class="col-sm-12 mb-2">
        <div class="d-flex justify-content-center">
            <div class="btn-group" role="group">
                <a href="/profile/edit/{{employee.id}}" class="btn btn-dark"><i class="fa fa-pen"
                        aria-hidden="true"></i>&emsp;Edit &emsp;</a>
                <a href="/profile/delete/{{employee.id}}" class="btn btn-danger"><i class="fa fa-trash"
                        aria-hidden="true"></i>&emsp;Delete&emsp;</a>
            </div>
        </div>
    </div>
</div>